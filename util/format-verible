set -e
ROOT=$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)

if command -v verible-verilog-format &> /dev/null
then
find rtl/ bhv/ -not -path "*rtl/vendor*" \
    -name '*.sv' | \
    xargs verible-verilog-format --inplace 2> /dev/zero
fi